{% extends "base.html" %}

{% block title %}Pareto - Optimization Dashboard{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="text-center py-8">
        <h1 class="text-4xl font-bold text-foreground mb-4">Pricing Optimization Dashboard</h1>
        <p class="text-xl text-muted-foreground mb-8">Visualize and optimize provider allocations across products</p>
    </div>

    <!-- Product Quantities Setup -->
    <div class="bg-card rounded-lg border border-border p-6 mb-8">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold">Product Quantities</h2>
            <button id="calculateBtn" 
                    class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 bg-[#023047] text-white hover:bg-[#023047]/90">
                <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                Calculate Cost
            </button>
        </div>
        <div id="productQuantities" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <p class="text-muted-foreground col-span-full text-center py-8">Loading products...</p>
        </div>
    </div>

    <!-- Cost Summary -->
    <div id="costSummary" class="hidden bg-card rounded-lg border border-border p-6 mb-8">
        <h2 class="text-xl font-semibold mb-4">Cost Summary</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-secondary/20 rounded-lg p-4">
                <div class="text-sm text-muted-foreground">Total Cost</div>
                <div id="totalCost" class="text-2xl font-bold text-foreground">$0.00</div>
            </div>
            <div class="bg-secondary/20 rounded-lg p-4">
                <div class="text-sm text-muted-foreground">Total Units</div>
                <div id="totalUnits" class="text-2xl font-bold text-foreground">0</div>
            </div>
            <div class="bg-secondary/20 rounded-lg p-4">
                <div class="text-sm text-muted-foreground">Providers Used</div>
                <div id="providerCount" class="text-2xl font-bold text-foreground">0</div>
            </div>
        </div>
    </div>

    <!-- Provider Allocation View (replaces old sections) -->
    <div id="allocationView" class="hidden space-y-6">
        <h2 class="text-xl font-semibold">Provider Allocation Breakdown</h2>
        <div id="providerBreakdown" class="space-y-4">
            <!-- Provider cards will be rendered here -->
            <h2 class="text-xl font-semibold mb-6 flex items-center">
                <svg class="w-5 h-5 mr-2 text-[#023047]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Select Product & Item
            </h2>
            <div class="space-y-4">
                <div>
                    <label for="productSelect" class="block text-sm font-medium mb-2">Product *</label>
                    <select id="productSelect" 
                            class="w-full px-3 py-2 border border-input rounded-md focus:ring-2 focus:ring-ring focus:border-transparent"
                            aria-label="Select product">
                        <option value="">-- Select a Product --</option>
                    </select>
                </div>
                <div>
                    <label for="itemSelect" class="block text-sm font-medium mb-2">Item *</label>
                    <select id="itemSelect" 
                            disabled
                            class="w-full px-3 py-2 border border-input rounded-md focus:ring-2 focus:ring-ring focus:border-transparent disabled:opacity-50 disabled:cursor-not-allowed"
                            aria-label="Select item">
                        <option value="">-- Select an Item --</option>
                    </select>
                    <p class="text-xs text-muted-foreground mt-1">Select a product first to enable item selection</p>
                </div>
            </div>
        </div>

        <!-- Optimization Parameters Card -->
        <div class="bg-card border rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-6 flex items-center">
                <svg class="w-5 h-5 mr-2 text-[#023047]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                Optimization Parameters
            </h2>
            <form id="optimizationForm" class="space-y-4">
                <div>
                    <label for="quantity" class="block text-sm font-medium mb-2">
                        Quantity (Units) *
                    </label>
                    <input type="number" 
                           id="quantity" 
                           name="quantity"
                           min="1" 
                           placeholder="e.g., 1000"
                           class="w-full px-3 py-2 border border-input rounded-md focus:ring-2 focus:ring-ring focus:border-transparent"
                           aria-label="Quantity in units">
                    <p class="text-xs text-red-600 mt-1 hidden" id="quantityError"></p>
                </div>
                <button type="submit" 
                        id="runOptimizationBtn"
                        class="w-full inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2 bg-[#023047] text-white hover:bg-[#023047]/90">
                    <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    Run Optimization
                </button>
            </form>
        </div>
    </div>

    </div>

    <!-- Empty State -->
    <div id="emptyState" class="hidden text-center py-12">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold flex items-center">
                <svg class="w-5 h-5 mr-2 text-[#023047]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                Optimization Results
            </h2>
            <div id="resultsActions" class="hidden space-x-2">
                <button id="exportBtn" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-3">
                    <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Export
                </button>
                <button id="saveBtn" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-9 px-3 bg-[#023047] text-white hover:bg-[#023047]/90">
                    <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                    </svg>
                    Save
                </button>
            </div>
        </div>

        <svg class="mx-auto h-12 w-12 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-foreground">No Results</h3>
        <p class="mt-1 text-sm text-muted-foreground">Set product quantities and click "Calculate Cost" to see allocations.</p>
            <svg class="mx-auto h-16 w-16 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <h3 class="mt-4 text-lg font-semibold text-foreground">Ready to Optimize</h3>
            <p class="mt-2 text-sm text-muted-foreground max-w-md mx-auto">
                Select a product and item, configure your parameters, and click "Run Optimization" to find the best pricing options.
            </p>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="hidden">
            <div class="animate-pulse space-y-4">
                <div class="h-4 bg-secondary rounded w-3/4"></div>
                <div class="h-4 bg-secondary rounded w-1/2"></div>
                <div class="space-y-3 mt-6">
                    <div class="h-12 bg-secondary rounded"></div>
                    <div class="h-12 bg-secondary rounded"></div>
                    <div class="h-12 bg-secondary rounded"></div>
                </div>
            </div>
            <p class="text-center text-sm text-muted-foreground mt-6">Analyzing pricing options...</p>
        </div>

        <!-- Results Content -->
        <div id="resultsContent" class="hidden">
            <!-- Summary Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6" id="summaryStats">
                <!-- Stats will be dynamically inserted here -->
            </div>

            <!-- Provider Comparison Table -->
            <div class="overflow-x-auto mb-6">
                <table class="w-full" role="table" aria-label="Provider comparison">
                    <thead class="bg-secondary">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-secondary-foreground uppercase tracking-wider" scope="col">Provider</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-secondary-foreground uppercase tracking-wider" scope="col">Unit Range</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-secondary-foreground uppercase tracking-wider" scope="col">Price per Unit</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-secondary-foreground uppercase tracking-wider" scope="col">Total Cost</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-secondary-foreground uppercase tracking-wider" scope="col">Savings</th>
                        </tr>
                    </thead>
                    <tbody id="comparisonTableBody" class="bg-card divide-y divide-border">
                        <!-- Comparison rows will be dynamically inserted here -->
                    </tbody>
                </table>
            </div>

            <!-- Cost Comparison Chart -->
            <div class="bg-gradient-to-br from-secondary/30 to-secondary/10 rounded-lg p-6 border border-secondary">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-lg font-semibold flex items-center">
                        <svg class="w-5 h-5 mr-2 text-[#023047]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                        </svg>
                        Cost Comparison Chart
                    </h3>
                    <p class="text-xs text-muted-foreground">Sorted by total cost â€¢ Lower is better</p>
                </div>
                <div id="chartContainer" class="h-80 flex items-end justify-around gap-4 px-4">
                    <!-- Chart bars will be dynamically inserted here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Component Scripts -->
<script src="/static/home/js/quantityManager.js"></script>
<script src="/static/home/js/allocationVisualizer.js"></script>
<script src="/static/home/js/optimizationApp.js"></script>
{% endblock %}
